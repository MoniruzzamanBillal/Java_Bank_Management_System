<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankmanagementsystem.LoginController">
   <children>
      <Label layoutX="248.0" layoutY="27.0" prefHeight="46.0" prefWidth="104.0" text="Login">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <Label layoutX="156.0" layoutY="200.0" text="Password">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Label>
      <Label layoutX="147.0" layoutY="129.0" text="User Email">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="userEmail" layoutX="248.0" layoutY="129.0" prefHeight="26.0" prefWidth="210.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button fx:id="loginBtn" layoutX="247.0" layoutY="258.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="37.0" prefWidth="210.0" text="Login">
